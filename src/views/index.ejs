<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="shortcut icon" href="favicon.png" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
		integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
		crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
	<link rel="stylesheet" href="main.css" />
	<script src="https://www.youtube.com/iframe_api"></script>
	<script src="main.js"></script>
	<title>Buscador Auxona</title>
</head>

<body class="main">
	<div class="round" id="spinner"></div>
	<!-- Search -->
	<div class="main__search d_none" id="main-search">
		<div class="main__logo">
			<img src="favicon.png" alt="logo" />
			<span>
				Auxona
			</span>
		</div>
		<div class="controls__menu">
			<div class="controls__menu--item">
				<button class="player__btn player__btn--small" id="show-player">
					<i class="bi bi-arrow-right"></i>
				</button>
				<h5 class="player__title">reproductor</h5>
			</div>
			<div class="controls__menu--item">
				<h5 class="player__title">Historial</h5>
				<button class="player__btn player__btn--small" id="show-history">
					<i class="bi bi-arrow-left"></i>
				</button>
			</div>
		</div>
		<div class="search__container">
			<div class="search__icon">
				<i class="bi bi-search"></i>
			</div>

			<div class="search__input">
				<input type="text" class="input__field" placeholder="Buscar..." name="search" id="data-search"
					autocomplete="off" />
			</div>
			<div>
				<button class="search__btn" type="submit" id="search">
					Search
				</button>
			</div>
		</div>
		<div class="result__container">
			<div class="result__title">
				<h5>Resultados</h5>
			</div>
			<div class="result__tracks">
				<div class="tracks" id="tracks"></div>
			</div>
		</div>
	</div>
	<!-- Fin Search -->

	<!-- History -->
	<div class="main__history move__right d_none" id="main-history">
		<div class="main__logo">
			<img src="favicon.png" alt="logo" />
			<span>
				Auxona
			</span>
		</div>
		<div class="controls__menu">
			<div class="controls__menu--item">
				<button class="player__btn player__btn--small" id="back-search-h">
					<i class="bi bi-arrow-right"></i>
				</button>
				<h5 class="player__title">Buscador</h5>
			</div>
		</div>
		<div class="col-12 d-flex justify-content-center">
			<div id="history">
			</div>
		</div>
	</div>
	<!-- Fin History -->

	<!-- reproductor-->
	<div class="main__player move__left" id="main-player">
		<div class="player">
			<div class="main__logo">
				<img src="favicon.png" alt="logo" />
				<span>
					Auxona
				</span>
			</div>
			<div class="controls__menu">
				<div class="controls__menu--item">
					<h5 class="player__title">Buscador</h5>
					<button class="player__btn player__btn--small" id="back-search" role="button"
						aria-label="volver a buscar">
						<i class="bi bi-arrow-left"></i>
					</button>
				</div>
			</div>
			<div class="player__album">
				<img src="https://cdns-images.dzcdn.net/images/cover/d41d8cd98f00b204e9800998ecf8427e/264x264-000000-80-0-0.jpg"
					alt="Album Cover" class="player__img" loading="lazy" id="player-image" />
			</div>

			<h2 class="player__artist" id="player-title">No hay Cancion</h2>
			<h3 class="player__song" id="player-artist">No hay Artista</h3>

			<input type="range" value="0" min="0" max="100" class="player__level" id="progress-track" />

			<div class="audio-duration">
				<div class="start" id="player-current">00:00</div>
				<div class="end" id="player-duration">00:00</div>
			</div>

			<div class="player__controls">
				<div class="player__btn player__btn--medium" id="player-back">
					<i class="bi bi-fast-forward-fill" id="icon-back"></i>
				</div>

				<div class="player__btn player__btn--medium blue" id="player-play">
					<i class="bi bi-pause-fill" id="icon-play"></i>
				</div>

				<div class="player__btn player__btn--medium" id="player-next">
					<i class="bi bi-fast-forward-fill" id="icon-next"></i>
				</div>
				<div id="player"></div>
			</div>
			<div class="player__volume">
				<button class="player__volume--btn" id="player-volume">
					<i class="bi bi-volume-up-fill" id="icon-volume"></i>
				</button>
				<div class="player__volume--bar">
					<div class="progress__bar">
						<input type="range" min="0" max="100" value="0" id="progress-volume" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Fin reproductor -->
</body>

</html>